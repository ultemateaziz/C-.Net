
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
namespace typeconverstion
{
    class Program
    {
        static void Main(string[] args)
        {
            //implicit operation
            int myInt = 9;
            double myDouble = myInt;
            Console.WriteLine("Implicit Operation Int Converted to Double:{0}", myDouble);

            //explisit operation
            double myDouble1 = 9.78;
            int myInt1 = (int)myDouble1;
            Console.WriteLine("explisit operation:{0}",myInt1);
            //boxing operation
            int m = 10;
            object om = m;
            m = 20;
            Console.WriteLine("boxing operation{0}",om);
            //unboxing
            int i = 30;
            object ob = i;
            int j = (int)ob;
            Console.WriteLine("unboxing operation{0}",j);
        }
    }
}
